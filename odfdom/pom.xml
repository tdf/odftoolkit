					<plugin>
						<groupId>org.odftoolkit</groupId>
						<artifactId>maven-codegen-plugin</artifactId>
						<version>0.8</version>
						<executions>
							<execution>
								<id>dom</id>
								<phase>generate-sources</phase>
								<goals>
