    <!-- Profile for deploying to the Sonatype repository, which
         requires GPG signatures 
		 see
		 https://docs.sonatype.org/display/Repository/Sonatype+OSS+Maven+Repository+Usage+Guide
		 https://docs.sonatype.org/display/Repository/How+To+Generate+PGP+Signatures+With+Maven
		 https://issues.sonatype.org/browse/OSSRH-960
		 -->
        <profile>
            <id>release-sign-artifacts</id>
            <activation>
                <property>
                    <name>performRelease</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.1</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
			<distributionManagement>
				<site>
					<id>odfdom</id>
					<name>ODFDOM Java Toolkit Project</name>
					<url>dav:https://odftoolkit.org/website/odfdom/${project.version}/odfdom</url>
				</site>
			</distributionManagement>
		</profile>
	</profiles>
