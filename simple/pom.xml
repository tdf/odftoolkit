    <scm>
        <connection>scm:svn:http://svn.apache.org/repos/asf/incubator/odf/trunk/simple</connection>
        <developerConnection>scm:svn:https://svn.apache.org/repos/asf/incubator/odf/trunk/simple</developerConnection>
